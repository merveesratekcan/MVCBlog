@model IEnumerable<HS14MVC.UI.Areas.Author.Models.SubjectVMs.SubjectListVM>

@{
    ViewData["Title"] = "GetSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .subjects-table {
        width: 100%;
        border-collapse: separate; /* Allow spacing between rows */
        border-spacing: 0 10px; /* 10px vertical spacing */
    }

        .subjects-table th, .subjects-table td {
            padding: 10px;
            background-color: white; /* White background for each row */
            border-bottom: 3px solid #f8f9fa; /* White space simulation */
        }

        .subjects-table th {
            border-bottom: none;
        }

    .subject-header {
        font-weight: bold; /* Bold font for headers */
        text-decoration: underline; /* Underlined text */
        font-size: 1.1em;
    }

    .btn-article {
        background-color: white; /* White background */
        color: #007bff; /* Blue text */
        padding: 8px 16px;
        border: 2px solid #007bff; /* Blue border */
        border-radius: 15px; /* Rounded corners */
        text-decoration: none; /* No underline */
        transition: background-color 0.3s, color 0.3s; /* Smooth transition */
    }

        .btn-article:hover {
            background-color: #007bff; /* Blue background on hover */
            color: white; /* White text on hover */
        }
</style>

<header class="masthead" style="background-image: url('/assets/img/blog-e1630478773246.jpg'); height: 33vh; display: flex; align-items: center; justify-content: center; text-align: center; color: black;">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1 style="font-size:5rem;">Subjects</h1>
                    
                </div>
            </div>
        </div>
    </div>
</header>

<table class="subjects-table">
    <thead>
        <tr>
            <th class="subject-header">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="subject-header">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("GetArticles", "Home", new { id = item.Id })" class="btn-article">Articles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

