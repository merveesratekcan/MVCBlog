        <img style="max-height: 300px; width: auto; object-fit: cover" src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Image)}")" alt="Article Image" class="img-fluid">
        <h2 class="section-heading">@Html.DisplayFor(model => model.SubjectName)</h2>
        <p>@Html.DisplayFor(model => model.Content)</p>
    </div>
</article>
