@model HS14MVC.UI.Models.RegisterVM

@{
    ViewData["Title"] = "Register";
   
}
<style>
    .masthead {
        background-image: url('/assets/img/home-bg.jpg'); /* Arka plan resmini ayarlayın */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: black;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.8); /* Yarı şeffaf beyaz arka plan */
        padding: 30px;
        border-radius: 15px; /* Köşeleri yuvarlak */
        width: 340px; /* Genişlik */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Gölge */
    }

    .form-control {
        margin-bottom: 10px; /* Form elemanları arası boşluk */
        padding: 10px;
        border-radius: 5px; /* Form elemanlarının köşeleri yuvarlak */
    }

    .btn-primary {
        background-color: #007bff; /* Buton rengi */
        border: none;
        padding: 10px 20px;
        border-radius: 10px; /* Buton köşeleri yuvarlak */
        width: 100%; /* Buton genişliği */
        color: black;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
<div class="masthead">
    <div class="form-container">
        <form asp-action="Register" asp-controller="Account" method="post">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h2>Register</h2>
                <input asp-for="FirstName" class="form-control" placeholder="First Name" required>
                <input asp-for="LastName" class="form-control" placeholder="Last Name" required>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
               
                <button type="submit" class="btn btn-primary">Register</button>
                <p>Already have an account? <a asp-controller="Account" asp-action="Login">Sign in</a></p>
            </form>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
