@model HS14MVC.UI.Areas.Author.Models.ArticleVMs.ArticleUpdateVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="font-size:24px; color: blue; font-weight: bold; margin-bottom:20px;">Update Article</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label" style="font-weight:bold;">Title</label>
                <input asp-for="Title" class="form-control" style="border-radius:5px;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label" style="font-weight:bold;">Content</label>
                <textarea asp-for="Content" class="form-control" style="height:200px; border-radius:5px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewImage" class="control-label" style="font-weight:bold;">Upload New Image</label>
                <input type="file" asp-for="NewImage" class="form-control" style="border-radius:5px;" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
            @if (Model.ExistingImage != null)
            {
                <div class="form-group">
                    <label>Existing Image</label>
                    <div>
                        <img src="data:image;base64,@Model.ExistingImage" alt="Existing Image" style="max-width: 100px; max-height: 100px;" />
                    </div>
                </div>
            }
            <div class="form-group">
                <label asp-for="Subjects" class="control-label" style="font-weight:bold;">Subjects</label>
                <select asp-for="SubjectId" asp-items="@Model.Subjects" class="form-control" style="border-radius:5px;">
                    <option>---Select---</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="width:100%; border-radius:5px;" />
            </div>
        </form>
        <br />
    </div>
</div>
<br />
<br />

<a asp-action="Index" class="btn btn-outline-primary" style="width:100%; background-color:white; border-color:black; color:black; border-radius:5px; font-weight:bold;" onmouseover="this.style.backgroundColor='grey'; this.style.color='white';" onmouseout="this.style.backgroundColor='white'; this.style.color='black';">
    Back to List
</a>
