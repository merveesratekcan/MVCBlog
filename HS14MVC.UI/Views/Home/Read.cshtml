}


<!-- Page Header-->
<header class="masthead" style="background-image: url('assets/img/post-bg.jpg')">
    <div class="container">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>@Html.DisplayFor(model => model.Title)</h1>
                    <h2 class="subheading">By @Html.DisplayFor(model => model.AuthorFirstName) @Html.DisplayFor(model => model.AuthorLastName)</h2>
                    <span class="meta">
                        Posted on @DateTime.Now.ToString("MMMM dd, yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

    <!-- Additional content and script references can go here -->

